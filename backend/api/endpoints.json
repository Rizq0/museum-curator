    },
    "response": {
      "id": "integer",
      "user_id": "integer",
      "name": "string",
      "updatedAt": "string",
      "createdAt": "string"
    }
  },
  "DELETE /api/collections/:id": {
    "description": "Delete a collection by id",
    "response": {}
  },
  "GET /api/artworks": {
    "description": "Get all artworks",
    "query": {
      "page": "integer",
      "limit": "Hardcoded to 15",
      "example": "GET /api/artworks?page=1"
    },
    "response": {
      "data": [
        {
          "id": "integer",
          "favourite_list_id": "integer",
          "artwork_id": "integer",
          "gallery": "string"
        }
